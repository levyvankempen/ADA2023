{
  "$schema": "http://www.krakend.io/schema/v3.json",
  "version": 3,
  "output_encoding": "json",
  "name": "InventoryOrderAggregate",
  "port": 8081,
  "endpoints": [
    {
      "endpoint": "/ordersinventories/{producttype}/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://order_record_service_ct:5000/"
          ],
          "disable_host_sanitize": false,
          "extra_config": {
            "qos/ratelimit/proxy": {
              "max_rate": 3,
              "capacity": 3
            }
          },
          "blacklist": [],
          "mapping": {
            "unit_price": "uprice"
          },
          "deny": [
            "name"
          ]
        },
        {
          "url_pattern": "/products/{producttype}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://inventory_service_ct:5000/"
          ],
          "disable_host_sanitize": false,
          "blacklist": [
            "name"
          ]
        }
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "maxRate": 3,
          "clientMaxRate": 0,
          "strategy": "ip"
        }
      }
    },
    {
      "endpoint": "/orders/{id}",
      "method": "GET",
      "extra_config": {
        "proxy": {
          "sequential": true
        }
      },
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://order_record_service_ct:5000/"
          ],
          "disable_host_sanitize": false,
          "mapping": {
            "product_type": "type"
          },
          "blacklist": []
        },
        {
          "url_pattern": "/products/{resp0_type}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://inventory_service_ct:5000/"
          ],
          "disable_host_sanitize": true,
          "blacklist": [
            "name"
          ]
        }
      ]
    }
  ],
  "extra_config": {
    "documentation/openapi": {
      "version": "1.0"
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s"
}